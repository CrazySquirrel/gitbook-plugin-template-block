{
  "name": "gitbook-plugin-template-block",
  "version": "1.0.3",
  "description": "Gitbook plugin for block templating",
  "repository": {
    "type": "git",
    "url": "git@github.com:CrazySquirrel/gitbook-plugin-template-block.git"
  },
  "engines": {
    "gitbook": ">=3.1.0"
  },
  "main": "lib/index.js",
  "keywords": [
    "gitbook",
    "plantuml"
  ],
  "author": "Sergey Yastrebov <info@crazysquirrel.ru>",
  "license": "MIT",
  "scripts": {
    "lint": "codeclimate analyze",
    "release": "standard-version && git push origin master --tags",
    "commit": "git-cz -a"
  },
  "pre-commit": [
    "lint"
  ],
  "eslintConfig": {
    "env": {
      "es6": true
    }
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.18.0",
    "pre-commit": "^1.2.2",
    "standard-version": "^4.0.0"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
